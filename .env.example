# Backend Environment Variables
# Copy this to backend/.env for local development
# Copy this to Railway/Heroku environment variables for production

# API Keys
ODDS_API_KEY=your_odds_api_key_here
WEATHER_API_KEY=your_openweathermap_key_here

# Security
JWT_SECRET=change-this-to-random-secret-key-in-production

# Database
DATABASE_URL=sqlite:///./sean_picks.db

# CORS (update with your frontend URL)
FRONTEND_URL=http://localhost:3000

# Frontend Environment Variables
# Copy to frontend/.env for local development
# Add to Vercel/Netlify environment variables for production

REACT_APP_API_URL=http://localhost:8001